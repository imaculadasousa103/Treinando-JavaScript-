 <script>
    var  n1 = Number (window.prompt ("Digite o primeiro  número:"))
    var n2 = Number (window.prompt ("Digite o segundo número"))
    var soma = n1 + n2
    
    if( soma >= 100) {
        document.write ("Obrigado por participar " + ", seu resultado foi: " + soma)
    } else {
        document.write ("Ops!")
    }
 </script>   

